<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_scores_fragment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    tools:context="ex.rr.archerysession.AddScoresFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insert_scores" />

        <TextView
            android:id="@+id/scoresText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30sp" />

        <TextView
            android:id="@+id/scoresText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/scoreButton_0"
                    android:text="@string/_0"
                    style="@style/scoreButton" />

                <Button
                    android:id="@+id/scoreButton_6"
                    android:text="@string/_6"
                    style="@style/scoreButton" />

                <Button
                    android:id="@+id/scoreButton_7"
                    android:text="@string/_7"
                    style="@style/scoreButton" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/scoreButton_8"
                    android:text="@string/_8"
                    style="@style/scoreButton" />

                <Button
                    android:id="@+id/scoreButton_9"
                    android:text="@string/_9"
                    style="@style/scoreButton" />

                <Button
                    android:id="@+id/scoreButton_10"
                    android:text="@string/_10"
                    style="@style/scoreButton" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/scoreButton_delete"
                    android:layout_gravity="end"
                    android:src="@android:drawable/ic_input_delete"
                    tools:ignore="InefficientWeight"
                    style="@style/scoreImageButton"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/submitButton"
            android:text="@string/submit"
            style="@style/buttonActive"/>
    </LinearLayout>

</RelativeLayout>
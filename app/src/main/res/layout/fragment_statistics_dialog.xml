<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/StatisticsDialogFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/standard_12"
    android:layout_marginTop="@dimen/standard_12"
    android:layout_marginEnd="@dimen/standard_12"
    android:layout_marginBottom="@dimen/standard_12"
    android:gravity="center_horizontal|center_vertical"
    tools:context="ex.rr.archerysession.StatisticsDialogFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/statsScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.anychart.AnyChartView
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:padding="@dimen/standard_6" />

            <com.anychart.AnyChartView
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:padding="@dimen/standard_6" />

            <com.anychart.AnyChartView
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:padding="@dimen/standard_6" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>